//% preprocessor::sfinae

/// \cond
#ifndef {% macros::prefix %}CONSTRAINED_COLUMN
	#define {% macros::prefix %}CONSTRAINED_COLUMN(I, ...) \
		{% macros::prefix %}CONSTRAINED_TEMPLATE(sfinae_col_idx == (I) && (__VA_ARGS__), size_t sfinae_col_idx = (I))
#endif
/// \endcond
#ifndef {% macros::prefix %}CONSTRAINED_COLUMN
	#define {% macros::prefix %}CONSTRAINED_COLUMN(I, ...)
